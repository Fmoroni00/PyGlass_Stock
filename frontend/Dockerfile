# Imagen base de Node.js
FROM node:20-slim

# Crear directorio de trabajo
WORKDIR /app

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar todo el c칩digo del frontend
COPY . .

# Construir la app de producci칩n
RUN npm run build

# Instalar servidor est치tico global
RUN npm install -g serve

# Exponer puerto
EXPOSE 5173

# Arrancar servidor est치tico
CMD ["serve", "-s", "dist", "-l", "5173"]
